<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/eventlistHomeInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="Heute steht folgendes an: "
        android:textColor="@color/colorBlackish"
        android:textSize="20sp"/>
    <ListView
        android:id="@+id/eventlistHome"
        android:layout_below="@id/eventlistHomeInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="36dp"/>

    <TextView
        android:id="@+id/textViewEventsHomeEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/eventlistHome"
        android:gravity="center"
        android:textStyle="italic"
        android:text="keine Ereignisse"
        android:textColor="@color/colorBlackish"
        android:visibility="gone"
        android:textSize="20sp"/>

</LinearLayout>